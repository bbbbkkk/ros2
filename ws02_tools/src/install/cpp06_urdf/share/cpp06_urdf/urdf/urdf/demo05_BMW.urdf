<robot name="BMW328">

  <!-- ===== 材质定义 ===== -->
  <material name="yellow">
      <color rgba="0.9 0.6 0.0 1.0"/>
  </material>

  <material name="black">
      <color rgba="0.2 0.2 0.2 1.0"/>
  </material>

  <material name="red_light">
      <color rgba="1.0 0.0 0.0 1.0"/>
  </material>

  <material name="blue_light">
      <color rgba="0.0 0.0 1.0 1.0"/>
  </material>

  <material name="headlight_color">
      <color rgba="1.0 1.0 0.8 1.0"/>
  </material>

  <!-- ============ base_footprint ============ -->
  <link name="base_footprint">
      <visual>
          <geometry>
              <sphere radius="0.001"/>
          </geometry>
      </visual>
  </link>

  <!-- ============ base_link ============ -->
  <link name="base_link">
      <visual>
          <geometry>
              <box size="0.2 0.12 0.07"/>
          </geometry>
          <material name="yellow"/>
      </visual>
  </link>

  <joint name="base_link_to_base_footprint" type="fixed">
      <parent link="base_footprint"/>
      <child link="base_link"/>
      <origin xyz="0 0 0.05"/>
  </joint>

  <!-- ============ 前大灯（两个小方块） ============ -->
  <link name="front_light_left">
      <visual>
          <origin xyz="0.1 0.03 0.015"/>
          <geometry>
              <box size="0.015 0.015 0.015"/>
          </geometry>
          <material name="headlight_color"/>
      </visual>
  </link>
  <joint name="front_light_left_joint" type="fixed">
      <parent link="base_link"/>
      <child link="front_light_left"/>
  </joint>

  <link name="front_light_right">
      <visual>
          <origin xyz="0.1 -0.03 0.015"/>
          <geometry>
              <box size="0.015 0.015 0.015"/>
          </geometry>
          <material name="headlight_color"/>
      </visual>
  </link>
  <joint name="front_light_right_joint" type="fixed">
      <parent link="base_link"/>
      <child link="front_light_right"/>
  </joint>

  <!-- ============ 车顶红蓝警灯（分成两个 link） ============ -->
  <link name="roof_light_red">
      <visual>
          <origin xyz="0 0.02 0.04"/>
          <geometry>
              <box size="0.02 0.05 0.02"/>
          </geometry>
          <material name="red_light"/>
      </visual>
  </link>
  <joint name="roof_light_red_joint" type="fixed">
      <parent link="base_link"/>
      <child link="roof_light_red"/>
  </joint>

  <link name="roof_light_blue">
      <visual>
          <origin xyz="0 -0.02 0.04"/>
          <geometry>
              <box size="0.02 0.05 0.02"/>
          </geometry>
          <material name="blue_light"/>
      </visual>
  </link>
  <joint name="roof_light_blue_joint" type="fixed">
      <parent link="base_link"/>
      <child link="roof_light_blue"/>
  </joint>

  <!-- ============ 前轮 ============ -->
  <link name="left_front_wheel">
      <visual>
          <origin rpy="1.57 0 0"/>
          <geometry>
              <cylinder radius="0.025" length="0.02"/>
          </geometry>
          <material name="black"/>
      </visual>
  </link>
  <joint name="leftfrontwheel_to_base_link" type="continuous">
      <parent link="base_link"/>
      <child link="left_front_wheel"/>
      <origin xyz="0.075 0.06 -0.025"/>
      <axis xyz="0 1 0"/>
  </joint>

  <link name="right_front_wheel">
      <visual>
          <origin rpy="1.57 0 0"/>
          <geometry>
              <cylinder radius="0.025" length="0.02"/>
          </geometry>
          <material name="black"/>
      </visual>
  </link>
  <joint name="rightfrontwheel_to_base_link" type="continuous">
      <parent link="base_link"/>
      <child link="right_front_wheel"/>
      <origin xyz="0.075 -0.06 -0.025"/>
      <axis xyz="0 1 0"/>
  </joint>

  <!-- ============ 后轮 ============ -->
  <link name="left_back_wheel">
      <visual>
          <origin rpy="1.57 0 0"/>
          <geometry>
              <cylinder radius="0.025" length="0.02"/>
          </geometry>
          <material name="black"/>
      </visual>
  </link>
  <joint name="leftbackwheel_to_base_link" type="continuous">
      <parent link="base_link"/>
      <child link="left_back_wheel"/>
      <origin xyz="-0.075 0.06 -0.025"/>
      <axis xyz="0 1 0"/>
  </joint>

  <link name="right_back_wheel">
      <visual>
          <origin rpy="1.57 0 0"/>
          <geometry>
              <cylinder radius="0.025" length="0.02"/>
          </geometry>
          <material name="black"/>
      </visual>
  </link>
  <joint name="rightbackwheel_to_base_link" type="continuous">
      <parent link="base_link"/>
      <child link="right_back_wheel"/>
      <origin xyz="-0.075 -0.06 -0.025"/>
      <axis xyz="0 1 0"/>
  </joint>

</robot>
