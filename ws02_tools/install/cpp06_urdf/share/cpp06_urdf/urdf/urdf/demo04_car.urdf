<!-- 创建四轮机器人模型-->
<!-- 长0.2m,宽0.12m,高0.07m-->
<!-- 车轮半径0.025m,车轮厚度0.02m,地盘离地间距0.15m-->
 <!--
    1.设置base_footprint
    2.设置base_link
    3.使用joint将二者关联
    4.添加一个车轮link
    5.将车轮和base_link关联
    6.其他车轮实现
-->

  <robot name="wheel_car">

    <material name="yellow">
        <color rgba="0.9 0.6 0.0 0.5"/>
    </material>
    <material name="black">
        <color rgba="0.2 0.2 0.2 0.8"/>
    </material>

    <link name="base_footprint">
        <visual>
            <geometry>
                <sphere radius="0.001"/>
            </geometry>
        </visual> 
    </link>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.2 0.12 0.07"/>
            </geometry>
            <material name="yellow"/>
        </visual>
    </link>

    <joint name="base_link_to_base_footprint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0.0 0.0 0.05" rpy="0.0 0.0 0.0"/>  
    </joint>
   
    <link name="left_front_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
            <material name="black"/>   
        </visual>   
    </link>

    <joint name="leftfrontwheel_to_base_link" type="continuous">
        <parent link="base_link"/>
        <child link="left_front_wheel"/>
        <origin xyz="0.075 0.06 -0.025" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 1 0"/>
    </joint>

     <link name="right_front_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
            <material name="black"/>   
        </visual>   
    </link>

    <joint name="rightfrontwheel_to_base_link" type="continuous">
        <parent link="base_link"/>
        <child link="right_front_wheel"/>
        <origin xyz="0.075 -0.06 -0.025" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 1 0"/>
    </joint>

     <link name="left_back_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
            <material name="black"/>   
        </visual>   
    </link>

    <joint name="leftbackwheel_to_base_link" type="continuous">
        <parent link="base_link"/>
        <child link="left_back_wheel"/>
        <origin xyz="-0.075 0.06 -0.025" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 1 0"/>
    </joint>

     <link name="right_back_wheel">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
            <material name="black"/>   
        </visual>   
    </link>

    <joint name="rightbackwheel_to_base_link" type="continuous">
        <parent link="base_link"/>
        <child link="right_back_wheel"/>
        <origin xyz="-0.075 -0.06 -0.025" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 1 0"/>
    </joint>
    
  </robot>
