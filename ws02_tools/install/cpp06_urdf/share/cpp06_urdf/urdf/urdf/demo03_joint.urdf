<!-- 机器人模型，由地盘与摄像头u成，摄像头沿z轴旋转-->
<robot name="detect_car">
    <link name="base_link">
        <visual>
            <geometry>
                <box size="5.0 2.0 1.5"/>
            </geometry>
            <material name="yellow">
                <color rgba="0.8 0.2 0.5 0.9"/>
            </material> 
        </visual>
    </link>

    <link name="base_footprint">
        <visual>
            <geometry>
                <geometry>
                    <sphere radius="0.001"/>
                </geometry>
            </geometry>
        </visual>
        
    </link>
    <link name="camera">
        <visual>
            <geometry>
                <box size="0.25 0.5 0.5"/>
            </geometry>
            <material name="red">
                <color rgba="0.8 0.6 0.2 0.5"/>    
            </material>
        </visual>
    </link>

    <joint name="base_to_camera" type="continuous">
        <parent link="base_link"/>
        <child link="camera"/>
        <origin xyz="1.25 0.0 1.0" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <joint name="base_link_to_footprint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0.0 0.0 0.75" rpy="0.0 0.0 0.0"/>

        
        
    </joint>
    
</robot>